---
import Layout from "./Layout.astro";

/* Esto esa para sacar el frontmatter del post que use el layout */
interface Props {
    frontmatter: {
      title: string;
      slug: string;
      thumbnail: string;
      date: string;
      author: string;
    };
  }
  const { frontmatter } = Astro.props as Props;
  
---
<Layout title={frontmatter.title}>
    <div class="max-w-screen-md mx-auto">
        <h1 class="text-4xl text-blue-700 text-center font-bold mt-14">{frontmatter.title}</h1>
        <div class="flex justify-center divide-x divide-gray-900 my-5">
            <div class="flex px-2 gap-1">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
                  </svg>
                  
                <p>{frontmatter.author}</p>
            </div>
            <div class="flex px-2 gap-1 ">

                    <p>{frontmatter.date}</p>   
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
                      </svg>               
            </div>
        </div>
        <img class="aspect-video rounded-lg object-cover" src={frontmatter.thumbnail} alt="">
        <div class="mt-4 content"> 
            <slot/>
        </div>
    </div> 

</Layout>
<style is:global>
    .content p{
        @apply mt-5
    }
</style>